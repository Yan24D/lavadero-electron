{
  "name": "lavadero-electron",
  "version": "1.0.0",
  "description": "Sistema digital multiplataforma para la gestión administrativa de un lavadero de vehículos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon backend/server.js",
    "server": "node backend/server.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "lavadero",
    "gestion",
    "vehiculos",
    "mysql"
  ],
  "author": "Yancarlos & Victorius",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.3",
    "dotenv": "^16.3.1"
  },
  "build": {
    "appId": "com.victorius.lavadero",
    "productName": "Auto Clean System",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "frontend/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}